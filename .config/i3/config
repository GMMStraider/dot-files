  colors {
#    background #232323
#    statusline #dcdcdc
    background $backgroundBlack
    statusline $focusYellow
    separator $focusYellow
    focused_workspace $focusYellow $focusYellow $black
    active_workspace #333333 #222222 $focusYellow
  }
}
